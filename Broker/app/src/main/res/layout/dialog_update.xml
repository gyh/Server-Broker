<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="提示标题"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/app_important_text_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_line_backgroud"
        />
    <TextView
        android:id="@+id/dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="6"
        android:padding="15dp"
        android:text="1.kjfkdjfkdfjkdfjkdjfk"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:id="@+id/viewUpdata"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textColor="@color/app_white"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_frame_red"
            android:gravity="center"
            android:textSize="14sp"
            android:text="更新"/>
        <View
            android:id="@+id/line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/app_white"/>
        <TextView
            android:id="@+id/viewDis"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textColor="@color/app_white"
            android:background="@drawable/btn_bg_frame_red"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>