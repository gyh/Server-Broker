<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="Theme.navheader" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <!--没有头部主题-->
    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--启动主题-->
    <style name="Theme.AppStartLoad" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/startlog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColorPrimary">@color/toolbar_title_text_color</item>
    </style>

    <!-- 按钮自定义样式 填充（大）按钮 -->
    <style name="Mybutton_fill_big">
        <item name="android:background">@drawable/btn_bg_fill_red</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!-- 按钮自定义样式 填充（中）按钮 -->
    <style name="Mybutton_fill_middle">
        <item name="android:background">@drawable/btn_bg_fill_red</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!-- 按钮自定义样式 填充（小）按钮 -->
    <style name="Mybutton_fill_small">
        <item name="android:background">@drawable/btn_bg_fill_red</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!-- 按钮自定义样式 边框（大）按钮 -->
    <style name="Mybutton_frame_big">
        <item name="android:background">@drawable/btn_bg_frame_red</item>
        <item name="android:textColor">#54616B</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">35dp</item>
    </style>
    <!-- 按钮自定义样式 边框（中）红按钮 -->
    <style name="Mybutton_frame_middle">
        <item name="android:background">@drawable/btn_bg_frame_red</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <!-- 按钮自定义样式 边框（中）灰按钮 -->
    <style name="Mybutton_frame_middle_grey">
        <item name="android:background">@drawable/btn_bg_frame_gray</item>
        <item name="android:textColor">@color/toolbar_menu_text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <!-- 按钮自定义样式 边框（小）按钮 -->
    <style name="Mybutton_frame_small">
        <item name="android:background">@drawable/btn_bg_frame_red</item>
        <item name="android:textColor">@color/toolbar_menu_text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <!-- 按钮自定义样式 边框（小）灰按钮 -->
    <style name="Mybutton_frame_small_grey">
        <item name="android:background">@drawable/btn_bg_frame_gray</item>
        <item name="android:textColor">@color/toolbar_menu_text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="EditTextStyler">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/app_body_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/app_body_sub_text_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--切换样式-->
    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="pagertab_icon_style">
        <item name="android:background">@drawable/tab_bg_normal</item>
        <item name="apTabBackground">@drawable/tab_bg_normal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@drawable/tab_color_select</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="apTabIndicatorColor">@color/app_theme_color</item>
        <item name="apTabUnderlineColor">#1A000000</item>
        <item name="apTabDividerColor">#00000000</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">8dp</item>
        <item name="apTabPaddingTopBottom">4dp</item>
        <item name="apTabTextSelectColor">@color/app_theme_color</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>
</resources>
